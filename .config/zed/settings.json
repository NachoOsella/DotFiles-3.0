{
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "terminal": {
        "shell": "system",
        "line_height": { "custom": 1.25 }
    },
    "project_panel": {
        "dock": "left",
        "indent_size": 12
    },
    "agent": {
        "default_profile": "ask",
        "always_allow_tool_actions": true,
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "model_parameters": [],
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "version": "2"
    },
    "vim_mode": true,
    "vim": {
        "toggle_relative_line_numbers": true
    },
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "agent_font_size": 16,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "theme": "Gruvbox Material",
    "diagnostics": {
        "inline": {
            "enabled": true
        }
    },
    "telemetry": {
        "enabled": false
    },
    "lsp": {
        "jdtls": {
            "initialization_options": {
                "bundles": [],
                "settings": {
                    "java": {
                        "errors": {
                            "incompleteClasspath": {
                                "severity": "warning"
                            }
                        },
                        "configuration": {
                            "updateBuildConfiguration": "interactive",
                            "maven": {
                                "userSettings": null
                            }
                        },
                        "trace": {
                            "server": "verbose"
                        },
                        "import": {
                            "gradle": {
                                "enabled": true
                            },
                            "maven": {
                                "enabled": true
                            },
                            "exclusions": [
                                "**/node_modules/**",
                                "**/.metadata/**",
                                "**/archetype-resources/**",
                                "**/META-INF/maven/**",
                                "/**/test/**"
                            ]
                        },
                        "jdt": {
                            "ls": {
                                "lombokSupport": {
                                    "enabled": true // Set this to true to enable lombok support
                                }
                            }
                        },
                        "referencesCodeLens": {
                            "enabled": false
                        },
                        "signatureHelp": {
                            "enabled": false
                        },
                        "implementationsCodeLens": {
                            "enabled": false
                        },
                        "format": {
                            "enabled": true
                        },
                        "saveActions": {
                            "organizeImports": false
                        },
                        "contentProvider": {
                            "preferred": null
                        },
                        "autobuild": {
                            "enabled": false
                        },
                        "completion": {
                            "favoriteStaticMembers": [
                                "org.junit.Assert.*",
                                "org.junit.Assume.*",
                                "org.junit.jupiter.api.Assertions.*",
                                "org.junit.jupiter.api.Assumptions.*",
                                "org.junit.jupiter.api.DynamicContainer.*",
                                "org.junit.jupiter.api.DynamicTest.*"
                            ],
                            "importOrder": ["java", "javax", "com", "org"]
                        }
                    }
                }
            }
        }
    }
}
